<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:behavior_peekHeight="50dp"
    app:elevation="4dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/userimageBS"
        android:scaleType="centerCrop"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/gradient"
        android:background="@drawable/gradient"/>

    <TextView
        android:id="@+id/usernameBS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:text="User Name"
        android:layout_below="@+id/userimageBS"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="-50dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userimageBS"
        android:id="@+id/mobileBSView"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/mobileBSIcon"
            android:background="@drawable/ic_action_smartphone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="1234567890"
            android:linksClickable="true"
            android:autoLink="phone"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:id="@+id/mobileBS"
            android:layout_toRightOf="@+id/mobileBSIcon"
            android:layout_toEndOf="@+id/mobileBSIcon" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/mobileBSView"
        android:background="@color/black"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobileBSView"
        android:id="@+id/emailBSView"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/emailBSIcon"
            android:background="@drawable/ic_action_email"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="example@example.com"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:id="@+id/emailBS"
            android:layout_toRightOf="@+id/emailBSIcon"
            android:layout_toEndOf="@+id/emailBSIcon" />
    </RelativeLayout>
</RelativeLayout>