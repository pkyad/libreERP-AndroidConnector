<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="custom"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.yadav.taskBoard.TaskCardFragment$PlaceholderFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:id="@+id/layout1">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello this is main fragment"
        android:layout_alignParentTop="true"

        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:text="Responsible:"
        android:id="@+id/responsible"
        android:textStyle="bold"/>

    <com.example.yadav.taskBoard.UserView
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:id="@+id/responsibledp"
        android:layout_alignTop="@+id/responsible"
        android:layout_alignLeft="@+id/followername"
        android:layout_alignStart="@+id/followername" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Assignee:"
        android:id="@+id/assignee"
        android:layout_below="@+id/responsible"
        android:layout_alignRight="@+id/responsible"
        android:layout_alignEnd="@+id/responsible"
        android:textStyle="bold"/>

    <com.example.yadav.taskBoard.UserView
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:id="@+id/assigneedp"
        android:layout_alignTop="@+id/assignee"
        android:layout_alignLeft="@+id/followername"
        android:layout_alignStart="@+id/followername" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/follower"
        android:layout_marginTop="11dp"
        android:text="Followers:"
        android:textStyle="bold"
        android:layout_below="@+id/assignee"
        android:layout_alignRight="@+id/assignee"
        android:layout_alignEnd="@+id/assignee" />
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/followername"
        android:scrollbars="none"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:layout_alignTop="@+id/follower"
        android:layout_toRightOf="@+id/follower"
        android:layout_toEndOf="@+id/follower">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/followers"
        >
    </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is description"
        android:id="@+id/description2"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/created"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/created"
        android:text="Created:"
        android:textStyle="bold"
        android:layout_below="@+id/followername"
        android:layout_toLeftOf="@+id/followername"
        android:layout_toStartOf="@+id/followername"
        android:layout_marginTop="13dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createdDate"
        android:text="safsfsdfsdf"
        android:layout_alignBaseline="@+id/created"
        android:layout_alignBottom="@+id/created"
        android:layout_alignLeft="@+id/followername"
        android:layout_alignStart="@+id/followername" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dueDate"
        android:text="Due Date:"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/createdDate"
        android:layout_alignBottom="@+id/createdDate"
        android:layout_toRightOf="@+id/createdDate"
        android:layout_toEndOf="@+id/createdDate"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dueDateDate"
        android:text="dgdsgsdfsdf"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignBaseline="@+id/dueDate"
        android:layout_alignBottom="@+id/dueDate"
        android:layout_toRightOf="@+id/dueDate"
        android:layout_toEndOf="@+id/dueDate" />
</RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout1"
    android:layout_marginTop="10dp"
    android:id="@+id/relativeLayout">
    <ListView android:layout_height="wrap_content"
        android:id="@+id/subtasks"
        android:layout_width="match_parent"
        android:numColumns="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        >

    </ListView>
    </RelativeLayout>

</RelativeLayout>
