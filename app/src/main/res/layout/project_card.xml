<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view_project"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="1dp"
    android:layout_margin="1dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/cardview_dark_background"
                android:text="ERP"
                android:textSize="17sp"
                android:textStyle="normal"
                android:typeface="sans"
                android:layout_alignParentTop="true"
                 />
            <TextView
                android:id="@+id/description_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/cardview_dark_background"
                android:text="ERP"
                android:textSize="12sp"
                android:textStyle="normal"
                android:typeface="sans"
                android:paddingBottom="12dp"
                android:paddingTop="5dp"
                android:layout_below="@+id/title_project"
               />


            <View
                android:id="@+id/progressBar_project"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/description_project"
                android:background="#c0c0c0" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_action_people"
                android:layout_below="@+id/description_project"
                android:paddingTop="7dp"
                android:id="@+id/peopleLogo"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/team_member_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/peopleLogo"
                android:layout_alignRight="@id/peopleLogo"
                android:layout_alignEnd="@+id/peopleLogo"
                android:text="0"
                android:padding="5dp"
                android:paddingStart="7dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingEnd="7dp"
                android:textColor="#FFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/badge_circle"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_action_files"
                android:layout_below="@+id/description_project"
                android:paddingTop="7dp"
                android:id="@+id/filesLogo"
                android:layout_toRightOf="@+id/peopleLogo"
                android:layout_toEndOf="@+id/peopleLogo"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/numbers_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/filesLogo"
                android:layout_alignRight="@id/filesLogo"
                android:layout_alignEnd="@+id/filesLogo"
                android:text="0"
                android:padding="5dp"
                android:paddingStart="7dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingEnd="7dp"
                android:textColor="#FFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/badge_circle"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_action_git"
                android:layout_below="@+id/description_project"
                android:paddingTop="7dp"
                android:id="@+id/reposLogo"
                android:layout_toRightOf="@+id/filesLogo"
                android:layout_toEndOf="@+id/filesLogo"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/numbers_repos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/reposLogo"
                android:layout_alignRight="@id/reposLogo"
                android:layout_alignEnd="@+id/reposLogo"
                android:text="0"
                android:padding="5dp"
                android:paddingStart="7dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingEnd="7dp"
                android:textColor="#FFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/badge_circle"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


